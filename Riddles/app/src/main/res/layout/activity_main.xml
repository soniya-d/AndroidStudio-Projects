<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:text="Riddles"
        android:textSize="50sp" />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="#ADD8E6"
        android:padding="30dp"
        android:text="What gets wetter and wetter the more it dires?"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="#ADD8E6"
        android:padding="30dp"
        android:text="What did nine say to eight?"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="#ADD8E6"
        android:padding="30dp"
        android:text="What is a polygon?"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="#ADD8E6"
        android:padding="30dp"
        android:text="Why are cats good at video games?"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="#ADD8E6"
        android:padding="30dp"
        android:text="What came after the dinosaur?"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="#ADD8E6"
        android:padding="30dp"
        android:text="What did 0 say to 8?"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="#ADD8E6"
        android:padding="30dp"
        android:text="when does a horse talk?"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="#ADD8E6"
        android:padding="30dp"
        android:text="What time does a duck wake up?"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
</LinearLayout>
