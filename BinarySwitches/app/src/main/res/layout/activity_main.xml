<?xml version="1.0" encoding="utf-8"?>
< xmlns:android="http://schemas.android.com/apk/res/android"
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:text="Binary Numbers!"
        android:textSize="50sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:text="Click on the switch to turn it on and off."
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/on1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:onClick="twoClick"
        android:src="@drawable/on_light" />

    <ImageView
        android:onClick="on2"
        android:id="@+id/four"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/on_light" />

        <ImageView
            android:onClick="off1"
            android:id="@+id/eight"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/off_light" />

        <ImageView
            android:onClick="off2"
            android:id="@+id/six"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/off_light" />

</Linearlayout>
</Linearlayout>
